{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@env": ["src/types/env.d.ts"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".env",
    "src/types/env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
