{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@env": ["src/types/env.d.ts"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "react"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".env",
    "src/types/env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
